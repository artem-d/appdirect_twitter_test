<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>

    <div id="settingsToggle"><a href="">Toggle Settings</a></div>
    <div id="settingsView"></div>
    <div class="clear"></div>

    <div id="tweetColumns">
      <div class="tweetColumn" id="column_0">
        <p class="temp">Loading timeline...</p>
      </div>
      <div class="tweetColumn" id="column_1">
        <p class="temp">Loading timeline...</p>
      </div>
      <div class="tweetColumn" id="column_2">
        <p class="temp">Loading timeline...</p>
      </div>
    </div>

    <!-- Template for timeline -->

    <script type="text/x-handlebars-template" id="timeline-template">
      <ul class='tweetTimeline'>
        {{#each tweets}}
        <li class="tweet">
          <div class="avatar">
            <img src='{{user.profile_image_url}}'></img>
          </div>
          <div class='data'>
            <b>{{user.name}}</b>
            <div class="timestamp"><i>{{friendlyDate}}</i></div>
            <p>{{format text}}</p>
          </div>
        </li>
        {{/each}}
      </ul>
    </script>

    <script type="text/x-handlebars-template" id="settings-template">
      <form id='settingsForm' action="#">
        Adjust tweets per column:<br/>
        5
        <input name="tweetCount" id="tweetCount" type="range" min="5" max="500" value="{{count}}">
        500<br/>
        <input type="submit" value="Update"/>
      </form>
    </script>

    <!-- General Includes -->
    <script src="javascripts/external/jquery-1.11.3.min.js"></script>
    <script src="javascripts/external/underscore-min.js"></script>
    <script src="javascripts/external/backbone-min.js"></script>
    <script src="javascripts/external/handlebars-v3.0.3.js"></script>
    <script src="javascripts/external/moment.js"></script>
    <script src="javascripts/libs/Helpers.js"></script>
    <script src="javascripts/libs/tweetParser.js"></script>

    <!-- The 'main' for this app -->
    <script src="javascripts/app/app.js"></script>

    <!-- Model -->
    <script src="javascripts/app/model/Tweet.js"></script>
    <script src="javascripts/app/model/Settings.js"></script>

    <!-- Collections -->
    <script src="javascripts/app/collection/Timeline.js"></script>

    <!-- View -->
    <script src="javascripts/app/view/TimelineView.js"></script>
    <script src="javascripts/app/view/SettingsToggleView.js"></script>
    <script src="javascripts/app/view/SettingsView.js"></script>

    <!-- Router -->
    <script src="javascripts/app/router/AppRouter.js"></script>

  </body>
</html>
